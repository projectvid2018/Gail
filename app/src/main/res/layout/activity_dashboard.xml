<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/md_teal_200"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".Dashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                android:onClick="search"
                android:elevation="10dp"
                android:focusable="true"
                android:hapticFeedbackEnabled="true"
                android:padding="2dp"
                app:cardBackgroundColor="@color/md_red_400"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                tools:targetApi="lollipop">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="15dp"
                    android:src="@drawable/search"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="Search"
                    android:textColor="@color/White"
                    android:textSize="45sp" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="2"
            android:padding="5dp">

            <android.support.v7.widget.CardView

                android:id="@+id/add"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                android:onClick="add"
                android:elevation="5dp"
                android:focusable="true"
                android:hapticFeedbackEnabled="true"
                android:padding="2dp"
                app:cardBackgroundColor="@color/DodgerBlue"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                tools:targetApi="lollipop">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_add_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_toEndOf="@+id/watch_history_icon"
                    android:layout_toRightOf="@+id/watch_history_icon"
                    android:padding="10dp"
                    android:text="Add"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/edit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                android:onClick="edit"
                android:elevation="5dp"
                android:focusable="true"
                android:hapticFeedbackEnabled="true"
                android:padding="2dp"
                app:cardBackgroundColor="@color/DodgerBlue"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                tools:targetApi="lollipop">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:src="@drawable/ic_edit_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:text="Edit"
                    android:padding="10dp"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="2"
            android:padding="5dp">

            <android.support.v7.widget.CardView

                android:id="@+id/delete"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                android:onClick="delete"
                android:elevation="8dp"
                android:focusable="true"
                android:hapticFeedbackEnabled="true"
                android:padding="2dp"
                app:cardBackgroundColor="@color/DodgerBlue"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                tools:targetApi="lollipop">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_delete_forever_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:text="Delete"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                android:onClick="view"
                android:elevation="8dp"
                android:focusable="true"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                app:cardBackgroundColor="@color/DodgerBlue"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                tools:targetApi="lollipop">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:src="@drawable/ic_format_list_bulleted_black_24dp"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:text="View"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>